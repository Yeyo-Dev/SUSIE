{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src", 
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],// Habilita APIs modernas de JS

    /* Interop & Compatibility */
    "esModuleInterop": true,// Permite importar paquetes CommonJS como ES Modules
    "forceConsistentCasingInFileNames": true,// Evita problemas entre Windows y Linux

    /* Stricter Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true,// Ignora errores de tipos en node_modules
    "sourceMap": true, 
    "declaration": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*"],// Solo compila lo que est√© en src
  "exclude": ["node_modules", "**/*.test.ts"]// Ignora carpetas pesadas
}